<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".presenter.main.MainActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.pchmn.materialchips.ChipsInput
      android:id="@+id/emails_chip_group"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:chip_deletable="true"
      app:chip_hasAvatarIcon="false"
      app:hint="@string/enter_email"
      android:layout_margin="@dimen/thumbnail_margin"/>

    <android.support.v7.widget.RecyclerView
      android:id="@+id/screenshots_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <Button
      android:id="@+id/btn_send"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="@string/send"/>

  </LinearLayout>

</ScrollView>